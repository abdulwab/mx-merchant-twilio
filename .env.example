# Server Configuration
PORT=3000
NODE_ENV=development

# Mx Merchant API Credentials
MX_API_KEY=your_api_key_here
MX_API_SECRET=your_api_secret_here
MX_MERCHANT_ID=your_merchant_id_here
MX_BASE_URL=https://sandbox.mx.com/api

# Optional: Webhook Configuration
MX_WEBHOOK_SECRET=your_webhook_secret_here

# Twilio SMS Configuration (Optional - for sending payment links via SMS)
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_PHONE_NUMBER=your_twilio_phone_number_here

# AWS SES Email Configuration (Optional - for sending payment links via email)
AWS_ACCESS_KEY_ID=your_aws_access_key_id_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key_here
AWS_REGION=us-east-1
SES_FROM_EMAIL=noreply@yourdomain.com

